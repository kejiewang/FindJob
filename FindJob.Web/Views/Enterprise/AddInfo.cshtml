
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> 企业信息完善</h3>
        <!-- BASIC FORM ELELEMNTS -->
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <h4 class="mb"><i class="fa fa-angle-right"></i> 企业信息完善</h4>
                    <form class="form-horizontal style-form" action="/Povider/AddSave" method="post">
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">企业名称</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Name" name="Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">电话</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Tel" name="Tel">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">地址</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Address" name="Address">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">资质认证</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Qualificaition" name="Qualificaition">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">简介</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Introduction" name="introduction">
                                <textarea name="txt" cols="135" rows="" warp="virtual"></textarea>
                            </div>
                        </div>
                        
                        
                        <div class="form-group">

                            <div class="col-sm-10">

                                <input type="submit" name="Save" value="提交 " class="btn btn-primary btn-lg" />
                            </div>
                        </div>
                    </form>
                </div>
            </div><!-- col-lg-12-->
        </div>
        <!-- /row -->

    </section>
